                }
            }, 1500);
        } else {
            console.error('‚ùå Bot√£o "Calcular melhor oferta" n√£o encontrado!');
        }
    } else {
        console.warn("‚ö†Ô∏è Crit√©rios n√£o atendidos, bot√µes n√£o clicados.");
    }
}

